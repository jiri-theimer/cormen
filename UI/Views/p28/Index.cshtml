@model p28PreviewViewModel

@{
    ViewData["Title"] = "Klient";
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";
    if (Model.Rec == null) return;
}

    
    <div class="modal_record_container">

        @Html.HiddenFor(m => m.Rec.pid)

        <div class="form-row">
            <label class="col-sm-2 col-md-3 col-form-label">Název:</label>
            <div class="col-sm-6 col-md-5">
                <span class="form-control bg-light">@(Model.Rec.p28Name)</span>

            </div>
            @if (Model.Rec.p28ShortName != null)
            {
                <div class="col-sm-2 col-md-2">
                    <span class="form-control bg-light">@(Model.Rec.p28ShortName)</span>
                </div>
            }

            <div class="col-sm-2 col-md-2">
                <span class="form-control bg-light">@(Model.Rec.p28Code)</span>

            </div>
        </div>



        <div class="form-row">
            <label class="col-sm-2 col-md-3 col-form-label">IČ/DIČ:</label>
            <div class="col-sm-6 col-md-5">
                <span class="form-control bg-light">@(Model.Rec.p28RegID)</span>

            </div>
            <div class="col-sm-4 col-md-4">
                <span class="form-control bg-light">@(Model.Rec.p28VatID)</span>

            </div>
        </div>
        
        <div class="form-row">
            <label class="col-sm-2 col-md-3 col-form-label">Město:</label>
            <div class="col-sm-10 col-md-9">
                <span class="form-control bg-light">@(Model.Rec.p28City1)</span>
            </div>
        </div>
        <div class="form-row">
            <label class="col-sm-2 col-md-3 col-form-label">Ulice:</label>
            <div class="col-sm-10 col-md-9">
                <span class="form-control bg-light">@(Model.Rec.p28Street1)</span>
            </div>
        </div>

        <div class="form-row">
            <label class="col-sm-2 col-md-3 col-form-label"></label>
            <div class="col-sm-3 col-md-3">
                <span class="form-control bg-light">@(Model.Rec.p28PostCode1)</span>

            </div>
            <div class="col-sm-7 col-md-6">
                <span class="form-control bg-light">@(Model.Rec.p28Country1)</span>

            </div>
        </div>
        @if (Model.Rec.p28City2 != null || Model.Rec.p28Street2 != null)
        {
            <div class="card-header" style="padding:1px;">Poštovní adresa</div>
            <div class="form-row">
                <label class="col-sm-2 col-md-3 col-form-label">Město:</label>
                <div class="col-sm-10 col-md-9">
                    <span class="form-control bg-light">@(Model.Rec.p28City2)</span>
                </div>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-md-3 col-form-label">Ulice:</label>
                <div class="col-sm-10 col-md-9">
                    <span class="form-control bg-light">@(Model.Rec.p28Street2)</span>
                </div>
            </div>

            <div class="form-row">
                <label class="col-sm-2 col-md-3 col-form-label"></label>
                <div class="col-sm-3 col-md-3">
                    <span class="form-control bg-light">@(Model.Rec.p28PostCode2)</span>

                </div>
                <div class="col-sm-7 col-md-6">
                    <span class="form-control bg-light">@(Model.Rec.p28Country2)</span>
                </div>
            </div>
        }

        <div class="form-row">
            <label class="col-sm-2 col-md-3 col-form-label">Vlastník záznamu:</label>
            <div class="col-sm-7 col-md-6">
                <span class="form-control bg-light">@(Model.Rec.RecordOwner)</span>

            </div>

        </div>


    </div>
@Html.DisplayFor(m => m.Rec, "~/Views/Shared/_MyTimestamp.cshtml")

