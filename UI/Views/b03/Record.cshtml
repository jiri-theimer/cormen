@model b03RecordViewModel

@{
    ViewData["Title"] = "Skupina stavů";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}
@addTagHelper *, UI


@using (Html.BeginForm())
{
    <h4>Skupina stavů</h4>
    @Html.EditorFor(m => m.Toolbar, "~/Views/Shared/_MyToolbar.cshtml")
    @Html.HiddenFor(m => m.Rec.pid)

    <div class="modal_record_container">

        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
            <div class="col-sm-11 col-md-10">
                <input class="form-control" asp-for="Rec.b03Name" />
                <span asp-validation-for="Rec.b03Name" class="text-danger"></span>
            </div>
        </div>
    
        <div class="card">
            <div class="card-header">
                Stavy ve skupině
            </div>
            <div class="card-body">
                <mycheckboxlist asp-for="@Model.SelectedB02IDs" textfield="NamePlusCode" groupfield="b02Entity" valuefield="pid" datasource="@Model.lisB02"></mycheckboxlist>
            </div>
        </div>




    </div>
}



