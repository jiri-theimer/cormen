@model o53RecordViewModel

@{
    ViewData["Title"] = "Skupina kategorií";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}
@addTagHelper *, UI


@using (Html.BeginForm())
{
    <h4>Kategorie (skupina položek)</h4>
    @Html.EditorFor(m => m.Toolbar, "~/Views/Shared/_MyToolbar.cshtml")
    @Html.HiddenFor(m => m.Rec.pid)

<div class="modal_record_container">

    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
        <div class="col-sm-11 col-md-10">
            <input class="form-control" asp-for="Rec.o53Name" />
            <span asp-validation-for="Rec.o53Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <input asp-for="@Model.Rec.o53IsMultiSelect" />
        <label for="Rec_o53IsMultiSelect">Při kategorizaci možnost zaškrtnout více položek (checkbox-list)</label>
    </div>
    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Index pořadí:</label>
        <div class="col-sm-11 col-md-10">
            <mynumber asp-for="Rec.o53Ordinary" decimal-digits="0"></mynumber>
        </div>
    </div>


    <div class="card">
        <div class="card-header">
            Vazba položek skupiny na entity
        </div>
        <div class="card-body">
            <mycheckboxlist asp-for="@Model.SelectedEntities" textfield="AliasPlural" valuefield="IntPrefix" datasource="@Model.ApplicableEntities"></mycheckboxlist>
        </div>
    </div>





</div>
}

@Html.DisplayFor(m => m.Rec, "~/Views/Shared/_MyTimestamp.cshtml")


<script type="text/javascript">
   
</script>



