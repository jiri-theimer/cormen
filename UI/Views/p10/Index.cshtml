        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
            <div class="col-sm-9 col-md-8">
                <input class="form-control" asp-for="Rec.p10Name" readonly="readonly" />

            </div>
            <div class="col-sm-2 col-md-2">
                <input class="form-control" asp-for="Rec.p10Code" readonly="readonly" />

