@model p10PreviewViewModel
@{
    ViewData["Title"] = "Master produkt";
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";
    if (Model.Rec == null) return;
}


    <div class="modal_record_container">

        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
            <div class="col-sm-6 col-md-5">

                <span class="val-readonly">@(Model.Rec.p10Name)</span>
            </div>
            <div class="col-sm-2 col-md-2">
                <span title="@Model.Rec.p20Name" class="val-readonly" style="overflow:hidden;">@(Model.Rec.p20Code+" ["+Model.Rec.p20Name+"]")</span>

            </div>
            <div class="col-sm-1 col-md-1">
                <span class="val-readonly">@(Model.Rec.p10RecalcUnit2Kg)@(Model.Rec.p20CodePro)</span>

            </div>
            <div class="col-sm-2 col-md-2">
                <span class="val-readonly">@(Model.Rec.p10Code)</span>

            </div>
        </div>

        <div class="form-row" style="margin-top:10px;">
            <label class="col-sm-1 col-md-2 col-form-label">Receptura:</label>
            <div class="col-sm-9 col-md-8">
                <span class="val-readonly">@(Model.Rec.p13Name)</span>
            </div>
            <div class="col-sm-2 col-md-2">
                <span class="val-readonly">@(Model.Rec.p13Code)</span>

            </div>
        </div>
        <div class="form-row" style="margin-top:10px;">
            <label class="col-sm-1 col-md-2 col-form-label">Typ produktu:</label>
            <div class="col-sm-6 col-md-5">
                <span class="val-readonly">@(Model.Rec.p10TypeFlag)</span>
            </div>
            <label class="col-sm-1 col-md-1 col-form-label">Stav:</label>
            <div class="col-sm-4 col-md-4">
                <span class="val-readonly">@(Model.Rec.b02Name)</span>
            </div>
        </div>
        @Html.Raw(Model.Rec.TagHtml)

        



    </div>
@if (Model.Rec.p10Memo != null)
{
    <hr />

    <pre>@Html.DisplayFor(m => m.Rec.p10Memo, new { @class = "val-readonly-wrap" });</pre>


}

@Html.DisplayFor(m => m.Rec, "~/Views/Shared/_MyTimestamp.cshtml")


