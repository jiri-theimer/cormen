@model o12RecordViewModel

@{
    ViewData["Title"] = "Kategorie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    <h4>Kategorie | Skupina</h4>
    @Html.EditorFor(m => m.Toolbar, "~/Views/Shared/_MyToolbar.cshtml")
    @Html.HiddenFor(m => m.Rec.pid)

    <div class="modal_record_container">

        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
            <div class="col-sm-11 col-md-10">
                <input class="form-control" asp-for="Rec.o12Name" />
                <span asp-validation-for="Rec.o12Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Kód:</label>
            <div class="col-sm-11 col-md-10">
                <input class="form-control" asp-for="Rec.o12Code" />
                <span asp-validation-for="Rec.o12Code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Vazba:</label>
            <div class="col-sm-11 col-md-10">
                <select asp-for="Rec.o12Entity" class="form-control">
                    <option value=""></option>
                    <option value="p10">Master produkt</option>
                    <option value="o23">Dokument</option>
                </select>
                <span asp-validation-for="Rec.o12Entity" class="text-danger"></span>
            </div>
        </div>




    </div>
}

@Html.DisplayFor(m => m.Rec, "~/Views/Shared/_MyTimestamp.cshtml")



