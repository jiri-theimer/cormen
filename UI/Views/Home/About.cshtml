@inject BL.RunningApp _app
@inject BL.Factory _f

@{
    ViewData["Title"] = "O aplikaci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="modal_record_container">
    <h4>O aplikaci</h4>

    

    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
        <div class="col-sm-11 col-md-10">
            <span class="form-control bg-light">@_app.AppName</span>


        </div>

    </div>

    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Verze:</label>
        <div class="col-sm-11 col-md-10">
            <span class="form-control bg-light">@(_app.AppVersion+", "+_app.AppBuild)</span>


        </div>

    </div>


    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Autor:</label>
        <div class="col-sm-11 col-md-10">
            <span class="form-control bg-light"><a href="mailto:pavla@elebro.cz">Rajmund Pavla</a></span>


        </div>

    </div>

    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Vývoj:</label>
        <div class="col-sm-11 col-md-10">
            <span class="form-control bg-light"><a href="mailto:jiri.theimer@gmail.com">Jiří Theimer</a></span>


        </div>

    </div>

    <div class="form-row" style="margin-top:20px;">
        <label class="col-sm-1 col-md-2 col-form-label">Technická podpora:</label>
        <div class="col-sm-11 col-md-10">
            @if (_f.CurrentUser.j03LiveChatTimestamp == null)
            {
                <button class="btn btn-sm btn-secondary py-0 py-0" title="Zapnout LIVE CHAT-BOX" style="font-size:125%;" onclick="handle_smartsupp(1)">☊</button>
            }
            else
            {
                <button class="btn btn-sm btn-danger py-0 py-0" title="Vypnout LIVE CHAT-BOX" style="font-size:125%;" onclick="handle_smartsupp(2)">☊</button>
            }


        </div>

    </div>

</div>

<button type="button" onclick="pokus()">pokus REST API</button>

<script type="text/javascript">
    function pokus() {
        var d = new Date();

        var c = {
            p41Code: "1T20200003.1.001",
            p45MaterialCode: "voda1",
            p45MaterialBattch: null,
            p45RowNum: 1,
            p45OperCode: "010",
            p45OperNum: 1,
            p45OperParam: 0,
            p45OperStatus: null,
            p45Start: d.toISOString(),
            p45End: d.toISOString(),
            p45TotalDurationOperMin: 100,
            p45EndFlag: 0,
            p45MaterialUnitsCount: 1000,
            p45Operator: "Josef"
        }
        
        $.get("/Api/skutecna_vyroba_save", { p41Code: c.p41Code, p45MaterialCode: c.p45MaterialCode, p45MaterialBattch: c.p45MaterialBattch, p45RowNum: c.p45RowNum, p45OperCode: c.p45OperCode, p45OperNum: c.p45OperNum, p45OperParam: c.p45OperParam, p45OperStatus: c.p45OperStatus, p45Start: c.p45Start, p45End: c.p45End, p45TotalDurationOperMin: c.p45TotalDurationOperMin, p45EndFlag: c.p45EndFlag, p45MaterialUnitsCount: c.p45MaterialUnitsCount, p45Operator: c.p45Operator }, function (data) {

            alert(data.flag);
            alert(data.message);

        });


    }
</script>