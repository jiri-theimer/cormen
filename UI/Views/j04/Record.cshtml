@model j04RecordViewModel

@{
    ViewData["Title"] = "Record";
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}
@addTagHelper *, UI


@using (Html.BeginForm())
{
    <h4>Aplikační role</h4>
    @Html.EditorFor(m => m.Toolbar, "~/Views/Shared/_MyToolbar.cshtml")
    @Html.HiddenFor(m => m.Rec.pid)

<div class="modal_record_container">

    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
        <div class="col-sm-11 col-md-10">
            <input class="form-control" asp-for="Rec.j04Name" />
            <span asp-validation-for="Rec.j04Name" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" id="hid1" name="xSelectedPermissions" value="1,4,3,1" />
    <input type="hidden" id="hid1" name="xSelectedPermissions" value="" />

    <div class="card">
        <div class="card-header">
            Oprávnění role
        </div>
        <div class="card-body">
            <mycheckboxlist asp-for="@Model.SelectedPermissions" textfield="Name" valuefield="Value" datasource="@Model.PermCatalogue"></mycheckboxlist>
        </div>
    </div>
    



</div>
}

